@model IEnumerable<WebApplication8.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Employees
        </th>
    </tr>

@foreach (var project in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => project.Title)
        </td>
        <td>
            <ul>
                @foreach (var emp in project.Employees)
                {
                    <li>@emp.FirstName</li>
                }
            </ul>
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id= project.Id }) |
            @Html.ActionLink("Details", "Details", new { id= project.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id= project.Id })
        </td>
    </tr>
}

</table>
