@model WebApplication8.Models.Project
@using WebApplication8.Models
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Employees
        </dt>

        <dd>
            <ul>
                @foreach (var emp in ViewBag.Employees as List<Employee>)
                {
                    foreach (var empInModel in Model.Employees)
                    {
                        if (empInModel.FirstName != null)
                        {
                            if (empInModel.FirstName == emp.FirstName)
                            {
                                <li>@empInModel.FirstName</li>
                            }
                        }
                        else
                        {
                            <li></li>
                        }
                    }
                 }
             </ul>

                </dd>

            </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
