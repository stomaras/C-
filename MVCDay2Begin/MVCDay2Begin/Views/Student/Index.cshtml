@model IEnumerable<MVCDay2Begin.Models.Student>


@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> @TempData["message"]
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>

            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var stu in Model)
        {
            <tr class="bg-primary">
                <td><img width="80" src="@stu.PhotoUrl" /></td>
                <td>@stu.Id</td>
                <td>@stu.FirstName</td>
                <td>@stu.LastName</td>
                <td>@stu.DateOfBirth.ToString("d")</td>

                <td>
                    <a class="btn btn-primary" href="/Student/Details?id=@stu.Id">Details</a>
                    <a class="btn btn-success" href="#">Edit</a>
                    <form action="/student/delete" method="Get">
                        <input type="hidden" name="id" value="@stu.Id" />
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }

    </tbody>


</table>

