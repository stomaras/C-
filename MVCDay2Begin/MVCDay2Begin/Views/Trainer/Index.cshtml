@model IEnumerable<MVCDay2Begin.Models.Trainer>

@if (TempData["Delete Success Trainer"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> @TempData["Delete Success Trainer"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Subject</th>
            <th>Actions</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>

                <td>@trainer.FirstName</td>
                <td>@trainer.LastName</td>
                <td>@trainer.Subject</td>
                <td>
                    <a class="btn btn-primary" href="/Trainer/Details?id=@trainer.TrainerId">Details</a>
                    <a class="btn btn-success" href="#">Edit</a>
                    <form action="/Trainer/Delete" method="post">
                        <input type="hidden" name="id" value="@trainer.TrainerId" />
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>


</table>

