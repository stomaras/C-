@model Category

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr/>
		</div>
		<div asp-validation-summary="All"></div><!--Display All Falses Validations Messages-->
		<div>
			<input type="hidden" />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label><!--Display name of the property-->
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label><!--Display name of the property-->
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back To List
		</a>
	</div>
</form>
